# Agentic News Reaper - Environment Configuration Template
# Copy this file to .env and customize for your environment

# ============================================================================
# Database Configuration
# ============================================================================

# Path to SQLite database file
ANR_DB_PATH=hn_state.db

# Path to database schema SQL file (optional)
ANR_SCHEMA_PATH=schema.sql

# ============================================================================
# Hacker News API Configuration
# ============================================================================

# HN Firebase API base URL (typically unchanged)
ANR_HN_API_BASE_URL=https://hacker-news.firebaseio.com/v0

# Number of top stories to fetch per run (1-500, recommended 100)
ANR_HN_STORIES_COUNT=100

# HTTP request timeout in seconds
ANR_HN_TIMEOUT=30

# ============================================================================
# Multi-Agent System Configuration
# ============================================================================

# Non-Determinism Detector (NDD)
# Threshold for flagging ambiguous content (0.0-1.0)
# Higher = more conservative (fewer false positives)
# Lower = more aggressive (more sensitivity)
ANR_NDD_AMBIGUITY_THRESHOLD=0.78

# Execution Pattern Miner (EPM)
# Minimum confidence for pattern matching (0.0-1.0)
# Patterns below this threshold are ignored
ANR_EPM_MIN_CONFIDENCE=0.5

# Human Override Detector (HOD)
# Risk score threshold requiring human override (0.0-1.0)
# Patterns with risk >= this value require human approval
ANR_HOD_OVERRIDE_THRESHOLD=0.9

# ============================================================================
# Logging Configuration
# ============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
ANR_LOG_LEVEL=INFO

# Log format (json for structured logging, text for human-readable)
ANR_LOG_FORMAT=json

# ============================================================================
# Application Configuration
# ============================================================================

# Debug mode (true/false)
# Enables verbose logging and stack traces
ANR_DEBUG=false

# Environment (development, staging, production)
# Affects default settings and error handling
ANR_ENV=development
